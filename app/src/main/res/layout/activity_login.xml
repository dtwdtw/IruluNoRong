<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/login_layout"
        layout="@layout/common_simple_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_layout"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/user_logo_width"
            android:layout_height="@dimen/user_logo_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@mipmap/sign_in_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/common_top_options_normal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login_email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/email_icon" />

                <View
                    android:id="@+id/login_email_line_v"
                    android:layout_width="1px"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/login_email_icon"
                    android:background="#4fa6ff" />

                <EditText
                    android:id="@+id/login_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/login_email_line_v"
                    android:background="@null"
                    android:hint="@string/email_address"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#4fa6ff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login_password_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/password_icon" />

                <View


                    android:id="@+id/login_password_line_v"
                    android:layout_width="0.1px"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/login_password_icon"
                    android:background="#4fa6ff" />

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/login_password_line_v"
                    android:background="@null"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <ImageView
                    android:id="@+id/login_password_show_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/login_password_et"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@mipmap/login_close" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_password_height"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_02_selector"
            android:text="@string/sign"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_text_size" />


        <View
            style="@style/HorizontalLine8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:visibility="gone" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/blue_line_image"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/blue_line_image" />
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/blue_line_image"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/change_password_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/facebookback"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/facebookicon"
                    android:text="   Sign In With Facebook"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/setting_text_size" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/change_password_height"
                android:layout_marginTop="15dp"
                android:background="@drawable/twitterback"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@drawable/twittericon"
                    android:text="    Sign In With Twitter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/setting_text_size" />
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_account_tv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/creat_an_account"
                android:textColor="#6db5f9"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/login_forgot_password_tv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="#6db5f9"
                android:textSize="@dimen/setting_text_size" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>