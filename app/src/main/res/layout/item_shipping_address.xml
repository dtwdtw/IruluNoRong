<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shipping_address_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="BDZjason"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/setting_text_size" />

        <TextView
            android:id="@+id/shipping_address_street1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="2400 E Asbury AvE #418"
            android:textColor="#666666"
            android:textSize="@dimen/setting_right_text_size" />

        <TextView
            android:id="@+id/shipping_address_street2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:text="2400 E Asbury AvE #418"
            android:textColor="#666666"
            android:textSize="@dimen/setting_right_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shipping_address_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="all"
                android:text="denver ,"
                android:textColor="#666666"
                android:textSize="@dimen/setting_right_text_size" />

            <TextView
                android:id="@+id/shipping_address_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="co"
                android:textColor="#666666"
                android:textSize="@dimen/setting_right_text_size" />

            <TextView
                android:id="@+id/shipping_address_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="80210"
                android:textColor="#666666"
                android:textSize="@dimen/setting_right_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/shipping_address_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="USA"
            android:textColor="#666666"
            android:textSize="@dimen/setting_right_text_size" />

        <TextView
            android:id="@+id/shipping_address_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="00-1-213-8564523"
            android:textColor="#666666"
            android:textSize="@dimen/setting_right_text_size" />

        <View
            style="@style/HorizontalLine8"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_password_height">

            <ImageView
                android:id="@+id/shipping_address_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="10dp"
                android:src="@mipmap/round_button_normal" />

            <TextView
                android:id="@+id/shipping_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/shipping_address_item_iv"
                android:text="Set A Default"
                android:textColor="#666666"
                android:textSize="@dimen/setting_right_text_size" />

            <TextView
                android:id="@+id/add_address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:clickable="true"
                android:text="Edit"
                android:textColor="#4fa6ff"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/shipping_address_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="Delete"
                android:textColor="#4fa6ff"
                android:textSize="@dimen/setting_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>