<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/change_password_height"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/failed_sign_in"
        android:textColor="#2d2d2d"
        android:textSize="@dimen/dialog_title_text_size" />

    <View style="@style/HorizontalLine8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp"
        android:text="@string/failed_sign_in_text"
        android:textColor="#666666"
        android:textSize="@dimen/setting_text_size" />

    <View
        style="@style/HorizontalLine8"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_unregister_goback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_password_height"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/go_back"
            android:textAllCaps="false"
            android:textColor="#4fa6ff"
            android:textSize="@dimen/setting_text_size" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8" />

        <Button
            android:id="@+id/dialog_unregister_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_password_height"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="#4fa6ff"
            android:textSize="@dimen/setting_text_size" />
    </LinearLayout>

</LinearLayout>