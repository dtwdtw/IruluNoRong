<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:paddingTop="@dimen/product_margin_box_02"
              android:paddingLeft="@dimen/product_margin_box_03"
              android:paddingRight="@dimen/product_margin_box_03"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/swipe_iv_icon"
        android:visibility="gone"
        android:paddingBottom="@dimen/product_margin_box_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/swipe_tv_title"
        android:paddingTop="@dimen/product_margin_box_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>