<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/cart_empty_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/message_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/wish_empty_title"
        android:textSize="@dimen/second_title_size"
        android:text="@string/message_empty_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/message_empty_text"
        android:layout_marginBottom="@dimen/wish_empty_margin"
        android:src="@mipmap/messages_no_news_icon"/>

</RelativeLayout>