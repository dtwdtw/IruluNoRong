<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wish_tv_empty_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:paddingLeft="@dimen/reviews_rating_padding"
        android:paddingRight="@dimen/reviews_rating_padding"
        android:text="@string/wish_empty_tip"
        android:textColor="@color/product_old_price"
        android:textSize="@dimen/tip_text_size" />

    <TextView
        android:id="@+id/wish_tv_empty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/wish_tv_empty_tip"
        android:layout_marginBottom="@dimen/reviews_title_padding"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/reviews_title_padding"
        android:paddingRight="@dimen/reviews_title_padding"
        android:text="@string/wish_empty_title"
        android:textColor="@color/wish_empty_title"
        android:textSize="@dimen/second_title_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/wish_tv_empty_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/wish_empty_margin"
        android:src="@mipmap/wish_list_kong" />

    <Button
        android:id="@+id/wish_bt_empty_go_shopping"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/wish_empty_margin_shopping"
        android:layout_marginLeft="@dimen/btn_right_left"
        android:layout_marginRight="@dimen/btn_right_left"
        android:background="@drawable/button_01_selector"
        android:minHeight="0dp"
        android:paddingBottom="@dimen/product_margin_box_03"
        android:paddingLeft="@dimen/search_text_padding"
        android:paddingRight="@dimen/search_text_padding"
        android:paddingTop="@dimen/product_margin_box_03"
        android:text="@string/go_shopping"
        android:textAllCaps="false"
        android:textColor="@color/blue_line_image"
        android:textSize="@dimen/second_title_size" />

</RelativeLayout>