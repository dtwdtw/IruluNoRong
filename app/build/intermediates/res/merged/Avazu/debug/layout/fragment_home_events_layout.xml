<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_simple_title" />

    <ProgressBar
        android:id="@+id/web_pb_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <com.wf.irulu.common.view.pulltorefresh.PullToRefreshWebView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/events_wb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrDrawable="@drawable/animation" />
</LinearLayout>