<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

    <TextView
        android:id="@+id/gift_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="[Add-on gift]"
        android:textColor="#7B7B7B"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/gift_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:text="x1"
        android:textSize="11sp"/>

    <LinearLayout
        android:id="@+id/gift_tag_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:layout_toRightOf="@id/gift_tag"
        android:layout_toLeftOf="@id/gift_quantity"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gift_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iRULU Victory 1 (V1) 5.5 Inch QHD Smartphone Android 4.4 1G RAM/8G ROM White"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#9F9F9F"
            android:textSize="11sp"/>

    </LinearLayout>

</RelativeLayout>
