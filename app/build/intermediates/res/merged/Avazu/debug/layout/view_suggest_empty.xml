<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_tv_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_box_gray_special"
            android:layout_marginLeft="2.5dp"
            android:padding="@dimen/product_margin_box_03"
            android:text="@string/people_are_searching"
            android:textColor="@color/product_title"
            android:textSize="@dimen/third_title_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_rv_hot"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_hot_height"
            android:layout_margin="@dimen/product_margin_box_03"/>

</LinearLayout>