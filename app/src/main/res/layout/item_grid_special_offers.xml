<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2px"
    android:layout_marginLeft="1px"
    android:layout_marginRight="1px"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="@dimen/home_img_width_height"
                android:layout_height="@dimen/home_img_width_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/home_margin_bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/product_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_old_price"
                    android:textSize="@dimen/old_price_size" />

                <TextView
                    android:id="@+id/product_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_old_price"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/product_new_price"
                    android:textSize="@dimen/new_price_size" />

                <ImageView
                    android:id="@+id/wishlist_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/product_old_price"
                    android:layout_marginRight="@dimen/home_margin_right"
                    android:src="@mipmap/wishlist_icon_normal" />

            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/biaoqian_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/biaoqian">

            <TextView
                android:id="@+id/biaoqian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

</FrameLayout>