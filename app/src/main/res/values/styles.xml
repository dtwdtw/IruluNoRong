    <style name="prodcut_price_old">
        <item name="android:textColor">@color/product_old_price</item>
        <item name="android:textSize">@dimen/tip_text_size</item>
    </style>


    <style name="navigation_title" parent="match_wrap">
        <item name="android:paddingBottom">@dimen/product_margin_box_02</item>
        <item name="android:paddingTop">@dimen/product_margin_box_02</item>
        <item name="android:paddingLeft">@dimen/product_margin_box_01</item>
        <item name="android:paddingRight">@dimen/product_margin_box_01</item>
    </style>

    <style name="navigation_title_text" parent="wrap_content">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/third_title_size</item>
        <item name="android:textColor">@color/product_title</item>
    </style>

    <style name="navigation_title_more" parent="wrap_content">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/detail_more_selector</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--Payment界面的标题名字的样式-->
    <style name="PaymentStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#5F5F5F</item>
    </style>

    <!--Payment界面的输入框里的Hint的文字的样式-->
    <style name="PaymentHintStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textColorHint">#C7C7C7</item>
    </style>

    <style name="detail_indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_drawable">@mipmap/yema_selected</item>
        <item name="unselected_drawable">@mipmap/yema_normal</item>
        <item name="selected_width">20dp</item>
        <item name="selected_height">20dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="MyAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
       <!-- Dialog的windowFrame框为无-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
       <!-- //是否半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--//是否显示title-->
        <item name="android:background">@android:color/transparent</item>
        <!--//设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>
