<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="15dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/receive_message_txt_time"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2015-12-12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >

        <com.wf.irulu.common.view.RoundImageView
            android:id="@+id/receive_message_headimg"
            style="@style/chat_message_head"
            android:background="@drawable/shape_circle_pic" />

        <TextView
            android:id="@+id/receive_message_txt"
            style="@style/wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:background="@drawable/notify_xinxitiao_kefu"
            android:layout_marginRight="30dp"
            android:text="gblkgbs\nujgblkwabg\nlksbdmgf\nagb" />
    </LinearLayout>

</LinearLayout>