<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <View
        android:id="@+id/split_v_block"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray" />

    <TableLayout
        android:id="@+id/order_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/split_v_block"
        android:layout_marginRight="35dp" >

        <TableRow
            android:layout_marginTop="12dp"
            android:layout_marginBottom="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Items Total:"
                android:textColor="#9F9F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_tv_pricetotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/product_new_price"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Shipping:"
                android:textColor="#9F9F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_shipping_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/product_new_price"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Promotional Savings:"
                android:textColor="#9F9F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_promotional_savings_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/product_new_price"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>

