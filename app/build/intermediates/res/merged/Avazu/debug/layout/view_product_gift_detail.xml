<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:maxLength="20"
        android:maxLines="1"
        android:lines="1"
        android:textSize="@dimen/tip_text_size"
        android:id="@+id/gift_tv_name"
        android:textColor="@color/product_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gift_tv_num"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:lines="1"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="@dimen/tip_text_size"
        android:layout_marginLeft="@dimen/product_margin_box_01"
        android:layout_toRightOf="@id/gift_tv_name"
        android:textColor="@color/product_old_price"/>

</RelativeLayout>
