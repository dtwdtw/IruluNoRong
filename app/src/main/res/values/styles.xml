<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="android:typeface">monospace</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:typeface">monospace</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.LargeDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Hold.Dialog.Base" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Dialog的背景是灰色的-->
    <style name="Theme.Dialog.Base" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:background">@color/gray</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TextView样式start -->
    <style name="TextViewStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- TextView样式end -->


    <!-- EditText样式start -->
    <style name="EditTextStyle1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- EditText样式end -->


    <!-- 横线样式1 start -->
    <style name="HorizontalLine_px">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_px</item>
    </style>

    <style name="HorizontalLine_dip">
