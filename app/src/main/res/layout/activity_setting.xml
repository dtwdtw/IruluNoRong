<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_simple_title" />

    <View
        style="@style/HorizontalLineGray5dp"/>

    <RelativeLayout
        android:id="@+id/setting_change_password_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/change_password"
            android:textSize="@dimen/setting_text_size"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_arrow" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine8"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/setting_wipe_cache_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/wipe_cache"
            android:textSize="@dimen/setting_text_size"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/setting_wipe_cache_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="0M"
            android:textColor="#73808e"
            android:textSize="@dimen/setting_right_text_size" />
    </RelativeLayout>
    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#EEEEEE"/>

    <RelativeLayout
        android:id="@+id/setting_feedback_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/setting_text_size"
            android:text="@string/your_feedback"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_arrow" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine8"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/setting_update_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/setting_text_size"
            android:text="@string/check_update"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/setting_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="V1.2.0"
            android:textColor="#73808e"
            android:textSize="@dimen/setting_right_text_size" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine8"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/setting_terms_of_service_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/setting_text_size"
            android:text="@string/terms_of_service"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_arrow" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine8"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/setting_privacy_policy_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/privacy_policy"
            android:textSize="@dimen/setting_text_size"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_arrow" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine8"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/setting_about_irulu_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_item_height"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/about_irulu"
            android:textSize="@dimen/setting_text_size"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_arrow" />
    </RelativeLayout>

</LinearLayout>