<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/message_rl_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_margin_top_bottom"
        android:layout_marginBottom="@dimen/message_margin_top_bottom"
        android:layout_marginLeft="@dimen/message_margin_left">

        <FrameLayout
            android:id="@+id/message_fl_supportpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <com.wf.irulu.common.view.CircleImageView
                android:id="@+id/message_img"
                android:layout_width="@dimen/message_head_img_width_height"
                android:layout_height="@dimen/message_head_img_width_height"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_pic"
                android:src="@drawable/picture_normel" />

            <TextView
                android:id="@+id/message_tv_supportnum"
                android:layout_width="@dimen/sidebar_unread_num_width"
                android:layout_height="@dimen/sidebar_unread_num_height"
                android:layout_gravity="right"
                android:background="@mipmap/message_unread"
                android:gravity="center"
                android:text="12"
                android:textSize="@dimen/shopping_cart_num"
                android:textColor="@color/white"/>
        </FrameLayout>

        <LinearLayout
            style="@style/match_parent"
            android:layout_alignBottom="@id/message_fl_supportpic"
            android:layout_alignTop="@id/message_fl_supportpic"
            android:layout_toRightOf="@id/message_fl_supportpic"
            android:layout_marginLeft="@dimen/message_text_layout_margin_left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/irulu_support"
                android:textColor="@color/product_name"
                android:textSize="@dimen/setting_right_text_size" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/message_text_margin_top"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/hello_world"
                android:textColor="#9F9F9F"
                android:textSize="@dimen/setting_right_text_size" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/message_margin_left"
        style="@style/HorizontalLine_px"/>
</LinearLayout>