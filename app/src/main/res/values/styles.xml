    <!-- 详情选择菜单 -->
    <style name="poup_window_anim">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/out_from_down</item>
    </style>

    <!-- 自定义Loading Dialog -->
    <!-- android:backgroundDimEnabled 默认为true，为false使Dialog显示时背景不变暗 -->
    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 聊天的时间样式 -->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/setting_right_text_size</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/popup_photoselect_slide_in</item>
