<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/choose_address_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/round_button_normal" />

            <TextView
                android:id="@+id/choose_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"
                android:text="BDZjason" />

            <LinearLayout
                android:id="@+id/choose_address_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Edit"
                    android:textColor="#6db5f9"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choose_address_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/choose_address_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2400 E Asbury AvE #418"
                android:textColor="#a6a6a6"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/choose_address_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="denver ,"
                    android:textColor="#a6a6a6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/choose_address_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="co"
                    android:textColor="#a6a6a6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/choose_address_zipCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="80210"
                    android:textColor="#a6a6a6"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/choose_address_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="USA"
                android:textColor="#a6a6a6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/choose_address_phoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="00-1-213-8564523"
                android:textColor="#a6a6a6"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>