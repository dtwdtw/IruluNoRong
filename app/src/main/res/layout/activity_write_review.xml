<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_simple_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/name"
            style="@style/match_wrap"
            android:lines="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@id/thumb"
            android:layout_toRightOf="@id/thumb"
            android:text="iRULU 5.0 Inch Quad-Core Smartphone Victory" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/thumb"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="White, 16GB"
            android:textColor="@color/product_new_price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/thumb"
            android:layout_below="@id/desc"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="$ 303.45"
            android:textColor="@color/product_new_price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price"
            android:layout_below="@id/desc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="X1"
            android:singleLine="true"
            android:textColor="@color/amount_product_gray"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
