<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginRight="1px"
    android:layout_marginTop="2px"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="1px">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="@dimen/home_img_width_height"
                android:layout_height="@dimen/home_img_width_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/home_margin_bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/product_new_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/orange"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/product_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/product_old_price"
                    android:layout_below="@id/product_new_price"
                    android:textSize="@dimen/old_price_size" />


            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/biaoqian_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/biaoqian2"
                android:padding="2dp"
                android:id="@+id/biaoqian_tv"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>
</FrameLayout>