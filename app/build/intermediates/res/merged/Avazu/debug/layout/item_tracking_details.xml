<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="128px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_tracking_point_iv"
            android:layout_width="24px"
            android:layout_height="24px" />

        <View
            android:id="@+id/item_tracking_lines_v"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            android:background="#9f9f9f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:layout_marginLeft="24px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_tracking_destination_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="#666666"
            android:textSize="@dimen/setting_right_text_size" />

        <TextView
            android:id="@+id/item_tracking_reach_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="top"
            android:textColor="#9f9f9f"
            android:textSize="@dimen/setting_right_text_size" />

    </LinearLayout>

</LinearLayout>