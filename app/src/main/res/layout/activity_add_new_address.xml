<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/add_layout"
        layout="@layout/common_simple_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/horizontal_line"
                style="@style/HorizontalLineGray5dp"
                android:layout_below="@id/add_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_line"
                android:background="@android:color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/add_street_address1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Street Address 1"
                    android:maxLength="128"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_street_address2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Street Address 2"
                    android:maxLength="128"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="City"
                    android:maxLength="32"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_state_province_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="State/Province/County"
                    android:maxLength="32"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_zip_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="ZIP/Postal Code"
                    android:maxLength="16"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/add_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:clickable="true"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:gravity="center_vertical"
                    android:maxLength="32"
                    android:text="United States"
                    android:textColor="#666666"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Firstname"
                    android:maxLength="32"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/add_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_password_height"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Lastname"
                    android:maxLength="32"
                    android:textColor="#666666"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/setting_right_text_size" />

                <View
                    style="@style/HorizontalLine8"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_profix"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/change_password_height"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:inputType="phone"
                        android:maxLength="5"
                        android:text="+1"
                        android:textColor="#666666"
                        android:textColorHint="#bbbbbb"
                        android:textSize="@dimen/setting_right_text_size" />

                    <EditText
                        android:id="@+id/add_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/change_password_height"
                        android:background="@null"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:paddingLeft="10dp"
                        android:textColor="#666666"
                        android:textColorHint="#bbbbbb"
                        android:textSize="@dimen/setting_right_text_size" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_new_address_save_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/btn_right_left"
        android:layout_marginRight="@dimen/btn_right_left"
        android:layout_marginTop="@dimen/add_new_btn"
        android:background="@drawable/button_02_selector"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_text_size" />

</LinearLayout>