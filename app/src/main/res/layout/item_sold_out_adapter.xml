<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--商品图片-->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/sold_out_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/notify_image_xiaotu"/>

            <TextView
                android:id="@+id/sold_out_tag"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#5B5A5B"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom|center"
                android:text="Sold Out"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <!--商品名称-->
            <TextView
                android:id="@+id/sold_out_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/product_name"
                android:text="Unlocked White iRulu 5.0 Inch Quad-Core Android 4.4 Smartphone Victory (V1s)"
                android:textSize="12sp"/>
            <!--商品sku-->
            <TextView
                android:id="@+id/sold_out_productSku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="16G,while"
                android:textColor="@color/product_old_price"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!--商品价格-->
                <TextView
                    android:id="@+id/sold_out_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_new_price"
                    android:text="$ 130.00"
                    android:textSize="15sp"/>
                <!--商品个数-->
                <TextView
                    android:id="@+id/sold_out_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/amount_product_gray"
                    android:text="x 1"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#DBDBDB"/>

</LinearLayout>