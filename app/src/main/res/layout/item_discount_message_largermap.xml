<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/discount_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/setting_right_text_size"
        android:textColor="@color/product_old_price"
        android:text="12:11" />

    <LinearLayout
        android:id="@+id/discount_message_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_discount_item_margin"
        android:layout_marginRight="@dimen/message_discount_item_margin"
        android:layout_marginBottom="@dimen/message_discount_item_margin"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/message_discountmessage_messagebg_normal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/discount_message_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/about_iru_text_size"
            android:textColor="@color/black_name"
            android:layout_marginTop="@dimen/message_discount_item_content_margin"
            android:layout_marginBottom="@dimen/message_discount_item_content_margin"
            android:text="Hurry to buy it!" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp" >-->

            <ImageView
                android:id="@+id/discount_message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/discount_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/message_discount_item_content_margin"
                android:layout_marginBottom="@dimen/message_discount_item_content_margin"
                android:lines="2"
                android:maxLines="2"
                android:textSize="@dimen/message_discount_item_content_text_size"
                android:textColor="@color/order_detail_title"/>
        <!--</LinearLayout>-->

        <View
            style="@style/HorizontalLine_px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/message_discount_item_content_margin"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/setting_right_text_size"
                android:textColor="#666666"
                android:text="Detail" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>