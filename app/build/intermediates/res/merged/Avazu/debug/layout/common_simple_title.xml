<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/commontitle_iv_back"
            android:layout_width="@dimen/title_arrow_width_height"
            android:layout_height="@dimen/title_arrow_width_height"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back_last_selector" />

        <TextView
            android:id="@+id/commontitle_tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:clickable="true"
            android:text="@string/cancel"
            android:visibility="gone"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/commontitle_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/drawer_selector"
            android:gravity="center"
            android:layout_toRightOf="@id/commontitle_iv_back"
            android:layout_marginLeft="@dimen/product_margin_box_01"
            android:layout_marginRight="@dimen/product_margin_box_01"
            android:ellipsize="end"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/commontitle_tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <View
        android:id="@+id/common_multiple_title_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_horizontal_line_height"
        android:background="@drawable/gradient_shape" />

    <!-- 无网络状态 -->
    <include layout="@layout/item_no_network_conn" />


</LinearLayout>
